@model PhoneStore.Web.Models.CartIndexViewModel

@{
    ViewBag.Title = "PhoneStore: Your shopping cart";
}
<style>
    #cartTable td {
        vertical-align: middle;
    }
</style>
<h2>Your shopping cart</h2>
<table id="cartTable" class="table">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Phone</th>
            <th class="text-right">Price</th>
            <th class="text-right">Total price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Phone.Name</td>
                <td class="text-right">@line.Phone.Price.ToString("# zl")</td>
                <td class="text-right">
                    @((line.Quantity * line.Phone.Price).ToString("# zl"))
                </td>
                <td>
                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                    {
                        @Html.Hidden("PhoneId", line.Phone.PhoneId)
                        @Html.HiddenFor(x => x.ReturnUrl)
                        <input class="btn btn-sm btn-warning" type="submit" value="Delete" />
                    }
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.Cart.SumTotalValue().ToString("# zl")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue shopping</a>
    @Html.ActionLink("Process order", "Checkout", null, new { @class = "btn btn-primary" })
</div>
